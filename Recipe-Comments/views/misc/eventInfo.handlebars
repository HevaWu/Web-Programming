<article class="event">
  <h1>{{ event.title }}</h1>
  <em>Start Time: {{event.startTime}}</em>
  <p>{{event.description}}</p>

  {{#if people.length}}
  <h3>Attendees</h3>
  <ul class="people">
    {{#each people }}
    <li><a href="/people/{{this.id}}">{{this.name}}</a></li>
    {{/each}}
  </ul>
  {{/if}}

  <h3>Location</h3>
  <p class="location"><a href="/locations/{{event.location}}">{{event.locationName}}</a></p>
</article>
